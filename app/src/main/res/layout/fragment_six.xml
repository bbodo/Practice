<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixFragment"
    android:padding="16dp">

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="예제 문제로 계산기 버튼"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/result"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="0"
            android:textSize="50sp"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:layout_constraintBottom_toTopOf="@+id/one_button"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle_button_background"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/two_button"
            app:layout_constraintTop_toBottomOf="@+id/result" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="2"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintBottom_toBottomOf="@+id/one_button"
            app:layout_constraintStart_toEndOf="@+id/one_button"
            app:layout_constraintEnd_toStartOf="@+id/three_button"
            app:layout_constraintTop_toTopOf="@+id/one_button"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="3"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/one_button"
            app:layout_constraintStart_toEndOf="@+id/two_button"
            app:layout_constraintEnd_toStartOf="@+id/plus_button"
            app:layout_constraintBottom_toBottomOf="@+id/one_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="4"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/one_button"
            app:layout_constraintStart_toStartOf="@+id/one_button"
            app:layout_constraintEnd_toStartOf="@+id/five_button"
            app:layout_constraintBottom_toTopOf="@+id/seven_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/four_button"
            app:layout_constraintStart_toEndOf="@+id/four_button"
            app:layout_constraintEnd_toStartOf="@+id/six_button"
            app:layout_constraintBottom_toBottomOf="@+id/four_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/five_button"
            app:layout_constraintStart_toEndOf="@+id/five_button"
            app:layout_constraintEnd_toStartOf="@+id/minus_button"
            app:layout_constraintBottom_toBottomOf="@+id/four_button"  />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="7"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/four_button"
            app:layout_constraintStart_toStartOf="@+id/four_button"
            app:layout_constraintEnd_toStartOf="@+id/eight_button"
            app:layout_constraintBottom_toTopOf="@+id/zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="8"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/five_button"
            app:layout_constraintStart_toEndOf="@+id/seven_button"
            app:layout_constraintEnd_toStartOf="@+id/nine_button"
            app:layout_constraintBottom_toTopOf="@+id/zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="9"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/six_button"
            app:layout_constraintStart_toEndOf="@+id/eight_button"
            app:layout_constraintEnd_toStartOf="@+id/divide_button"
            app:layout_constraintBottom_toTopOf="@+id/zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/seven_button"
            app:layout_constraintStart_toStartOf="@+id/seven_button"
            app:layout_constraintEnd_toStartOf="@+id/dot_button"
            app:layout_constraintBottom_toBottomOf="@+id/seven_button"
            app:layout_constraintHorizontal_bias="0.5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dot_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="."
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/seven_button"
            app:layout_constraintStart_toEndOf="@+id/zero_button"
            app:layout_constraintEnd_toStartOf="@+id/two_zero_button"
            app:layout_constraintBottom_toBottomOf="@+id/zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_zero_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="00"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/seven_button"
            app:layout_constraintStart_toEndOf="@+id/dot_button"
            app:layout_constraintEnd_toStartOf="@+id/mutiply_button"
            app:layout_constraintBottom_toBottomOf="@+id/zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/plus_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/three_button"
            app:layout_constraintStart_toEndOf="@+id/three_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/three_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/minus_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/six_button"
            app:layout_constraintStart_toEndOf="@+id/six_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/six_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divide_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="/"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/nine_button"
            app:layout_constraintStart_toEndOf="@+id/nine_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/nine_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mutiply_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="*"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toTopOf="@+id/two_zero_button"
            app:layout_constraintStart_toEndOf="@+id/two_zero_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/two_zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="clear"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/mutiply_button"
            app:layout_constraintStart_toEndOf="@+id/same_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/same_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="="
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/mutiply_button"
            app:layout_constraintStart_toEndOf="@+id/daum_button"
            app:layout_constraintEnd_toStartOf="@+id/clear_button"
            app:layout_constraintStart_toStartOf="@+id/two_zero_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/daum_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:text="다음 화면"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/rectangle_button_background"
            app:layout_constraintTop_toBottomOf="@+id/mutiply_button"
            app:layout_constraintStart_toStartOf="@+id/zero_button"
            app:layout_constraintEnd_toEndOf="@+id/dot_button"
            app:layout_constraintHorizontal_bias="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



