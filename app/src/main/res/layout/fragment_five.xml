<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <Button
        android:id="@+id/center_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="기준 겸 다음화면"
        android:background="#E6E6FA"
        android:layout_centerInParent="true"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/one_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="1"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="false"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/two_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="2"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_alignTop="@id/center_button"
        android:layout_alignParentRight="true"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/three_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="3"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_alignBottom="@id/center_button"
        android:layout_alignParentRight="true"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/four_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="4"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_alignStart="@id/center_button"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/five_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="5"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_alignEnd="@id/center_button"
        android:layout_alignParentBottom="true"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/six_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="6"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_toLeftOf="@id/center_button"
        android:layout_alignParentBottom="true"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/seven_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="7"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_above="@id/center_button"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

    <Button
        android:id="@+id/eight_button"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="8"
        android:textSize="30sp"
        android:background="#E6E6FA"
        android:layout_below="@id/center_button"
        android:outlineProvider="none"
        android:stateListAnimator="@null"/>

</RelativeLayout>